= form_for(@highlight) do |f|
  - if @highlight.errors.any?
    #error_explanation.bs-callout.bs-callout-danger
      %h4
        = pluralize(@highlight.errors.count, "error")
        prohibited this highlight from being saved

      %ul
        - @highlight.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :title, class: 'control-label'
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :description, class: 'control-label'
    = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :link, class: 'control-label'
    = f.text_field :link, class: 'form-control'
  .form-group
    = f.label :photo, class: 'control-label'
    = f.file_field :photo
  .form-group
    = f.label :display_date, class: 'control-label'
    = f.text_field :display_date, class: 'form-control'
  .form-group
    = f.check_box :displayed
    = f.label :displayed, class: 'control-label'
  .form-group
    = f.submit nil, class: 'btn btn-success'
