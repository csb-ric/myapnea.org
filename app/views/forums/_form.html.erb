<% @title = @forum.new_record? ? 'New Forum' : 'Edit Forum' %>

<div class="page-header">
  <h1>
    <%= link_to 'Forums', forums_path %> &middot;
    <% unless @forum.new_record? %>
      <%= link_to @forum.name, @forum %> &middot;
    <% end %>
    <%= @title %>
  </h1>
</div>

<%= form_for @forum, html: { class: 'form-horizontal' } do |f| %>
  <% if @forum.errors.any? %>
    <div id="error_explanation" class="bs-callout bs-callout-danger">
      <h4><%= pluralize(@forum.errors.count, "error") %> prohibited this forum from being saved</h4>

      <ul>
      <% @forum.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :slug, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :slug, class: 'form-control' %>
      <div class="bs-callout bs-callout-info">
        <h4>Naming convention</h4>

        <ul>
          <li>Must be a lowercase letter <code>a-z</code> followed by lowercase letters <code>a-z</code>, numbers<code>0-9</code>, or dashes<code>-</code>.</li>
        </ul>
        Ex: <code>meetings-1-on-1</code>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_area :description, rows: 7, class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to 'Cancel', (@forum.new_record? ? forums_path : @forum), class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
