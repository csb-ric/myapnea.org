<% @title = @forum.name %>

<div class="page-header">
  <h1>
    <%= link_to 'Forums', forums_path %> &middot;
    <%= @title %>
  </h1>
</div>


<%= link_to 'New Topic', new_forum_topic_path(@forum) %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @forum.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @forum.description %>
</p>

<p>
  <strong>Views count:</strong>
  <%= @forum.views_count %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @forum.slug %>
</p>

<%= link_to 'Edit', edit_forum_path(@forum) %> |
<%= link_to 'Back', forums_path %>

<ul>
  <% @forum.topics.each do |t| %>
    <li><%= link_to t.name, [@forum, t] %> <% if t.deleted? or t.hidden? %><span class="label label-danger">HIDDEN OR DELETED</span><% end %></li>
  <% end %>
</ul>
