- @title = @broadcast.title
- @keywords = @broadcast.keywords

.content-main-header2
  %h1
    Blog

.row
  .col-sm-9
    %h1.broadcast-title
      = @title
      - if current_user && current_user.community_contributor? && @broadcast.editable_by?(current_user)
        = link_to edit_broadcast_path(@broadcast), class: 'btn btn-xs btn-default' do
          %span.glyphicon.glyphicon-edit
          Edit Blog Post

    = render 'blog/show', broadcast: @broadcast
  .col-sm-3.col-buffer
    = render 'blog/menu'

%a.anchor-top{ name: 'comments' }
= render 'broadcast_comments/index', broadcast: @broadcast
