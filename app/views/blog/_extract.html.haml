.broadcast-info
  Posted by
  = link_to broadcast.user.forum_name, blog_path(a: broadcast.user.forum_name)
  on
  %i= broadcast.publish_date.strftime '%B %-d, %Y'
  - if broadcast.category
    in
    = link_to broadcast.category.name, blog_path(category: broadcast.category)

.broadcast
  %p
    = strip_tags(simple_markdown broadcast.description, true, false).gsub(/\r/, ' ').gsub(/\n/, ' ').truncate(500, separator: ' ', omission: '...').html_safe
    = link_to 'Keep reading', blog_post_path(broadcast.url_hash)
    %i.fa.fa-arrow-right.primary-blue
    = link_to blog_post_path(broadcast.url_hash.merge(anchor: 'comments')), class: 'comments-link' do
      Comments
      = surround '(', ')' do
        = broadcast.broadcast_comments.count
