.panel.panel-default
  .panel-heading List of Forums
  %table#forums.forums.table.table-striped{:cellspacing => "0"}
    %thead
      %tr
        %th.desc-and-last-post Forum Name
        %th.topics-count= t('topics', :scope => 'forem.general')
        %th.posts-count= t('posts', :scope => 'forem.general')
        %th.views-count= t('forem.forums.index.views')
        %th.enter
    %tbody
      = render category.forums