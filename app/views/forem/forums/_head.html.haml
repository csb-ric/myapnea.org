- @active_top_nav_link = 'forums'

#forum
  %ol.breadcrumb
    %li
      = link_to t('forem.forum.forums'), forem.forums_path
    %li.active
      = link_to "#{forem_emojify(forum.title)}", [forem, forum]
    .pull-right
      = link_to main_app.terms_and_conditions_path, class: 'btn btn-xs btn-link' do
        %span.fa.fa-legal
        Terms and Conditions
    %p#description.text-info= forem_format(forum.description)
    .clearfix
