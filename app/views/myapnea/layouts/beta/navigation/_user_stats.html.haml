- if current_user
  / = link_to forums_path, class: 'user-stats' do
  .col-xs-4.user-stats.hidden-sm
    %p.small.f500.text-dark5
      = "POST".pluralize(current_user.approved_posts.count).upcase
    %h5.text-white5
      = current_user.approved_posts.count
  / = link_to surveys_path, class: 'user-stats' do
  .col-xs-4.user-stats.hidden-sm
    %p.small.f500.text-dark5
      = "Survey".pluralize(current_user.complete_surveys.count).upcase
    %h5.text-white5
      = current_user.complete_surveys.count
  / = link_to research_topics_path, class: 'user-stats' do
  .col-xs-4.user-stats.hidden-sm
    %p.small.f500.text-dark5
      = "Vote".pluralize(current_user.number_votes_remaining).upcase
    %h5.large.text-white5
      = current_user.votes.count
