#container-right.primary-blue-bcg{ style: 'float:none; display:table-cell; vertical-align:top' }
  #container-right-fixed
    -if current_user
      %div{ style: 'padding: 15px 0;' }
        - if current_user.beta_opt_in?
          .alert.alert-info{ role: 'alert', style: 'margin-top:10px; margin-bottom:5px' }
            %btn{ type: 'button', class: 'close', data: { dismiss: 'alert' }, aria: { label: 'Close'} }
              %span{ aria: { hidden: 'true'} } &times;
            %strong Welcome to the beta version of the site!
            You can go back to the previous layout any time by going to your
            = link_to 'account settings.', account_path
        - else current_user.beta_opt_in?
          .alert.alert-info{ role: 'alert', style: 'margin-top:5px; margin-bottom:10px' }
            %btn{ type: 'button', class: 'close', data: { dismiss: 'alert' }, aria: { label: 'Close'} }
              %span{ aria: { hidden: 'true'} } &times;
            %strong We've released a new version of this site!
            %br
            You can join the new version now and help us improve by going to your
            = link_to 'account settings', account_path, style: 'text-decoration:underline;'
            and clicking 'Enable Beta'.
      .col-lg-5.col-md-5.col-md-offset-0.col-sm-offset-2.col-xs-5#user-profile-header-picture{ style:'' }
        = link_to social_profile_path do
          = image_tag current_user.photo_url, class: "user-picture", size: "65x65", style: 'width:65px; height:65px;'
      .col-lg-6.col-md-6.col-md-offset-0.col-sm-8.col-sm-offset-2.col-xs-6#user-profile-header-text{ style:'padding:0;' }
        %h4.user-name.text-white
          = current_user.name
        = link_to account_path, style: 'color:white; color:rgba(255,255,255,.8); text-decoration:none;', class: 'f300' do
          %span.glyphicon.glyphicon-cog{ style: 'margin-bottom:10px' }
          Settings
        %br
        = link_to main_app.destroy_user_session_path, style: 'color:white; color:rgba(255,255,255,.8); text-decoration:none;', class: 'f300', :method => :delete do
          %i.fa.fa-sign-out
          Sign out
    -else
      %div{ style: 'padding: 15px 0;' }
        .col-sm-12
          .centered-text
            = form_tag user_session_path, method: :post do
              = text_field_tag 'user[email]', nil, placeholder: 'Email', class: "form-control"
              = password_field_tag 'user[password]', nil, placeholder: 'Password', class: "form-control"
              = submit_tag 'Login', class: "btn btn-warning ", style: 'width:70%'
    .col-xs-11.col-xs-offset-1#user-profile-container{style:'margin-top:30px; margin-right:0; padding-right:0; margin-bottom:20px;'}
      %ul.list-group
        = link_to root_path do
          %li.list-group-item.hover-slide-left.list-shrink{ style: 'color:white; color: rgba(255,255,255,.8); text-decoration: none;' } Home
        = link_to forums_path do
          %li.list-group-item.hover-slide-left.list-shrink{ style: 'color:white; color: rgba(255,255,255,.8); text-decoration: none;' } Forums
        = link_to surveys_path do
          %li.list-group-item.hover-slide-left.list-shrink{ style: 'color:white; color: rgba(255,255,255,.8); text-decoration: none;' } Research Surveys
        = link_to research_topics_path do
          %li.list-group-item.hover-slide-left.list-shrink{ style: 'color:white; color: rgba(255,255,255,.8); text-decoration: none;' } Rank the Research
        = link_to intro_path do
          %li.list-group-item.hover-slide-left.list-shrink.visible-xs{style: 'margin-top:50px; color:white; color: rgba(255,255,255,.8); text-decoration: none;'} Introduction
        = link_to team_path do
          %li.list-group-item.hover-slide-left.list-shrink.visible-xs{ style: 'color:white; color: rgba(255,255,255,.8); text-decoration: none;' } Our Team
        = link_to faqs_path do
          %li.list-group-item.hover-slide-left.list-shrink.visible-xs{ style: 'color:white; color: rgba(255,255,255,.8); text-decoration: none;' } FAQs
        = link_to social_path do
          %li.list-group-item.hover-slide-left.list-shrink.visible-xs{ style: 'color:white; color: rgba(255,255,255,.8); text-decoration: none;' } Community
        = link_to providers_path do
          %li.list-group-item.hover-slide-left.list-shrink.visible-xs{ style: 'color:white; color: rgba(255,255,255,.8); text-decoration: none;' } Become a Provider
