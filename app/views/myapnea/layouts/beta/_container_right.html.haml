#container-right.no-js
  #container-right-fixed
    -if current_user
      = render partial: 'layouts/beta/alerts/right_nav_opt_in'
      .row.reset-layout{ style: 'padding-top: 20px;' }
        = render partial: 'layouts/beta/navigation/user_profile_display'
    -else
      .col-sm-12{ style: 'padding-top: 20px;' }
        .centered-text
          = form_tag user_session_path, method: :post do
            = text_field_tag 'user[email]', nil, placeholder: 'Email', class: "form-control"
            = password_field_tag 'user[password]', nil, placeholder: 'Password', class: "form-control"
            = submit_tag 'Login', class: "btn btn-warning ", style: 'width:70%'
    .row.reset-layout
      = render partial: 'layouts/beta/navigation/right_nav_main'
    .row.reset-layout
      = render partial: 'layouts/beta/navigation/user_stats'
    .row.reset-layout
      = render partial: 'layouts/beta/navigation/right_nav_mobile'
  #container-right-scroll
    .col-xs-12.reset-layout#recent-news-container{ style: '' }
      = render partial: 'layouts/beta/recent_news_posts'
