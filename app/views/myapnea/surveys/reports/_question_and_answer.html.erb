<!-- SURVEY QUESTIONS AND DATA -->
<% if answer_frequencies = question.answer_frequencies %>
  <div class="rectangle-speech-border rectangle-speech-border-left rectangle-speech-border-orange col-sm-9 col-sm-offset-1">
    <h4>
      <%= simple_markdown(question.text) %>
    </h4>
  </div>
  <div class="rectangle-speech-border rectangle-speech-border-right rectangle-speech-border-blue col-sm-9 col-sm-offset-2">
    <h5 class="f300" style='margin-bottom:30px;'>My answer: <span class='primary-blue'>
      <%= answer.show_value unless answer.nil? %>
    </span></h5>
    <h5>Compare your answers to the rest of the community</h5>
    <div class="col-sm-4" style='margin:20px auto;'>
      <table class='table-bordered' style='padding:10px; width:100%'>
        <thead>
          <th style='text-align:center;'>Option</th>
          <th style='text-align:center;'>Frequency</th>
        </thead>
        <% answer_frequencies.each do |answer_frequency| %>
          <tr style='background-color:rgba(245,245,245,.7)'>
            <td><%= answer_frequency[:label] %></td>
            <td><%= (answer_frequency[:frequency] * 100).round %>%</td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% end %>
