- if @provider and !params[:action] == 'providers'
  = render partial: 'static/beta/provider1'
- elsif params[:user] and params[:user][:user_type] == 'provider'
  =# render partial: "myapnea/static/beta/providers"
  = render partial: 'providers/form'
- else
  .row
    .col-md-8.col-md-offset-2
      #registration.panel.panel-default
        .panel-heading
          .row
            .col-md-6
              %h4 Sign Up For MyApnea.Org
            .col-md-6
              %p.pull-right
                Already a member?
                = link_to 'Sign in!', new_session_path(:user), class: 'content-link'
        .panel-body
          - if resource.errors.any?
            .alert.alert-danger.alert-dismissable
              %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
              %strong= t :registration_problems
              %ul
                - resource.errors.full_messages.each do |msg|
                  %li= msg.html_safe
          = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {}) do |f|
            = hidden_field_tag "#{resource_name}[provider_name]", (params[resource_name] ? params[resource_name][:provider_name] : '')
            .form-group
              = label "#{resource_name}[first_name]", :first_name, class: 'sr-only'
              = text_field_tag "#{resource_name}[first_name]", (params[resource_name] ? params[resource_name][:first_name] : ''), class: 'form-control input-lg', placeholder: User.human_attribute_name(:first_name), autocomplete: :off
            .form-group
              = label "#{resource_name}[last_name]", :last_name, class: 'sr-only'
              = text_field_tag "#{resource_name}[last_name]", (params[resource_name] ? params[resource_name][:last_name] : ''), class: 'form-control input-lg', placeholder: User.human_attribute_name(:last_name), autocomplete: :off
            .form-group
              = label "#{resource_name}[year_of_birth]", :year_of_birth, class: 'sr-only'
              = select_tag "#{resource_name}[year_of_birth]", options_for_select([['Year of Birth', nil]] + (1900..Date.today.year).to_a.reverse.collect{|i| [i,i]}, (params[resource_name] ? params[resource_name][:year_of_birth] : '')), class: 'form-control input-lg'
            .form-group
              = f.label :email, class: 'sr-only'
              = f.email_field :email, class: 'form-control input-lg', placeholder: User.human_attribute_name(:email), autocomplete: :off
            .form-group
              = f.label :password, class: 'sr-only'
              = f.password_field :password, class: 'form-control input-lg', placeholder: User.human_attribute_name(:password)


            = f.submit "Sign Up", class: 'btn btn-primary btn-block btn-lg'

