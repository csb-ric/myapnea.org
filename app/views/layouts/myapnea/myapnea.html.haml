!!!

%html{lang: "en"}
  %head
    %meta{charset: "UTF-8"}

    %title= yield(:title) + " " + "MyApnea.Org"
    = render "layouts/myapnea/before_scripts"

    %link{ 'href' => '//fonts.googleapis.com/css?family=Lato:300,400,700', 'rel' => 'stylesheet', 'type' => 'text/css' }

%body#MyApnea{screen_capture_injected: "true",  data: { email: "#{current_user.email if current_user}", fullname: "#{current_user.name if current_user}" } }
  #fb-root
  = render "layouts/myapnea/navigation/top_navigation_bar"
  .container{role: "main"}

    = render "layouts/flash_messages"
    = render "layouts/page_title_heading"

    - if content_for(:sublayout)
      = yield :sublayout # the sublayouts must make their own call to yield
    - else
      = yield

    = render "layouts/myapnea/footer"
    = render "layouts/after_scripts"

