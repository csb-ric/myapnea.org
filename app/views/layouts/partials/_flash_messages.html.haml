- flash.each do |type, message|
  - if ["alert", "notice", "error", "warning"].include?(type)
    %div{class: "alert #{{'notice' => 'alert-info', 'alert' => 'alert-warning', 'error' => 'alert-danger'}[type]} fade in"}
      %button.close{"data-dismiss" => "alert"}
        &times;
      = markdown message
