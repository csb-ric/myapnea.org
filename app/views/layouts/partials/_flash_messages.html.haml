  .flash-notice
    .container
      .lead.centered
        = flash[:notice].html_safe
- if flash[:alert].present?
  .flash-alert
    .container
      .lead.centered
        = flash[:alert].html_safe
- if flash[:warning].present?
  .flash-warning
    .container
      .lead.centered
        = flash[:warning].html_safe
