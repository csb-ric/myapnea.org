/ Fixed navbar
%nav.navbar.navbar-fixed-top
  .container-fluid.reset-layout
    .navbar-header
      %button.pull-right.navbar-toggle.collapsed{ type: "button", aria: { controls: "navbar", expanded: "false" }, data: { target: "#navbar-myapnea", toggle: "collapse" } }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to root_path, class: "navbar-brand" do
        = image_tag 'myapnea/logos/MyApneaLogo_border_whitetext_300x80.png', class: 'img-responsive'
    #navbar-myapnea.navbar-collapse.collapse
      - if current_user
        %ul#user-nav.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{ href: "#", role: "button", aria: { expanded: "false" }, data: { toggle: "dropdown" } }
              = image_tag current_user.photo_url, size: '25', class: 'img-rounded'
              &nbsp;
              = current_user.name
              &nbsp;
              %span.caret
            %ul.dropdown-menu{role: "menu"}
              %li
                = link_to 'Settings', account_path
              %li
                = link_to 'Help', faqs_path
              %li.divider
              %li
                = link_to 'Log out', destroy_user_session_path, method: :delete
              - if current_user.owner? or current_user.moderator?
                %li.divider
                %li
                  = link_to 'Admin Dashboard', admin_path
      - else
        %ul#log-in-nav.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{ href:'#', data:{ toggle: 'dropdown', object: 'login-with-focus' } }
              Login
            .dropdown-menu{ style: 'padding:15px;' }
              = form_tag user_session_path, method: :post, class: "navbar-form centered-text" do
                = text_field_tag 'user[email]', nil, placeholder: 'Email', class: 'form-control', style: 'margin-bottom:10px;', autofocus: true, autocomplete: 'off'
                = password_field_tag 'user[password]', nil, placeholder: 'Password', class: 'form-control', style: 'margin-bottom:10px;'
                = check_box_tag 'user[remember_me]', '1'
                %label{ for: 'user_remember_me' } Remember me
                %br
                = submit_tag 'Login', class: "btn btn-primary"
              %p.small.centered-text
                Not a member?
                = link_to 'Join now!', new_user_registration_path, style: 'color: #5999de;', class: 'inline-link'
      %ul#main-nav.nav.navbar-nav.navbar-right
        %li
          = link_to "#{current_user ? 'Dashboard' : 'Home'}", root_path
        %li
          = link_to 'Forums', forums_path
        %li
          = link_to 'Surveys', surveys_path
        %li
          = link_to 'Research', research_topics_path
        %li
          = link_to 'Learn', learn_path
