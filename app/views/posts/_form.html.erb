<% @title = @post.new_record? ? 'New Post' : 'Edit Post' %>

<div class="page-header">
  <h1>
    <%= link_to 'Forums', forums_path %> &middot;
    <%= link_to @forum.name, @forum %> &middot;
    <%= link_to @topic.name, [@forum, @topic] %> &middot;
    <%= @title %>
  </h1>
</div>

<%= form_for [@forum, @topic, @post], html: { class: 'form-horizontal' } do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation" class="bs-callout bs-callout-danger">
      <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved</h4>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_area :description, rows: 7, class: 'form-control' %>
    </div>
  </div>

  <% if current_user.has_role? :moderator %>
    <div class="form-group">
      <%= f.label :status, nil, class: 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= f.select :status, [['---', nil]] + Post::STATUS, {}, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <div class="checkbox">
          <label>
            <%= f.check_box :hidden %> Post Hidden
          </label>
        </div>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to 'Cancel', (@post.new_record? ? [@forum, @topic] : [@forum, @topic, @post]), class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
