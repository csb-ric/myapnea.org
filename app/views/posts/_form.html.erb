<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :topic_id %>
    <%= f.input :description %>
    <%= f.input :user_id %>
    <%= f.input :status %>
    <%= f.input :hidden %>
    <%= f.input :deleted %>
    <%= f.input :last_moderated_by_id %>
    <%= f.input :last_moderated_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
