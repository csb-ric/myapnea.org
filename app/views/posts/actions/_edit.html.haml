- if current_user && post.editable_by?(current_user)
  = succeed ' ' do
    = link_to edit_topic_post_path(post.topic, post), data: { toggle: 'tooltip', container: 'body'}, title: 'Edit Post', class: 'btn btn-xs btn-default' do
      %i.fa.fa-pencil
- if current_user && post.deletable_by?(current_user)
  = succeed ' ' do
    = link_to [post.topic, post], method: :delete, data: { confirm: 'Are you sure?', toggle: 'tooltip', container: 'body', title: 'Delete Post' }, class: 'btn btn-xs btn-danger' do
      %i.fa.fa-trash
