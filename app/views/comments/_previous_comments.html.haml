- if post.comments.present?
  .comment-group
    - post.comments.each do |comment|
      .comment-group-item
        .comment-usr-img
          = render 'forums/user_image_link', user: comment.user, size: 30
        .comment-content
          = comment.content
          .small= time_ago_in_words(comment.created_at) + ' ago'
