<div class="row" style="margin-top:40px">
  <div class="col-md-6 col-md-offset-3">
    <div id="sign-in" class="panel panel-default">
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <h4>Forgot your password?</h4>
          <p>
            Enter your email address to receive a password reset email. You may
            <%= mail_to ENV['pprn_support_email'], 'contact us', subject: 'Forgot my sign up email on MyApnea.Org' %>
            if you don't remember which email you used to register.
          </p>
          <div class="form-group"><%= f.email_field :email, autofocus: true, autocomplete: 'off', placeholder: "Email address", class: "form-control input-lg"%></div>
          <div><%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-primary btn-block" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
