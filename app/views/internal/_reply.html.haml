.profile-reply
  .profile-reply-image-container
    = link_to posts_member_path(reply.user.username), class: "link-muted" do
      = profile_picture_tag(reply.user)
      %small= reply.user.username
  .profile-reply-description-container
    %p
      %strong= reply.parent.title
    %p
      = link_to reply, data: { turbolinks: false }, class: "link-blend" do
        - clean_text = strip_tags(simple_markdown_new(reply.description)).gsub(/\r/, " ").gsub(/\n/, " ")
        - if clean_text.present?
          = clean_text.truncate(250, separator: ".", omission: "...").html_safe
          &raquo;
        - else
          = simple_markdown_new(reply.description + " &raquo;")


