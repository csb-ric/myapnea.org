- @title = "My Dashboard"

- @menu = "blue"
- @body = "grey"
- @footer = "grey"

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        = @title

.drawer-and-shelf-container
  .drawer
    = render "internal/menu"
  .shelf
    %p.lead Recent Forum Activity
    - @replies = Reply.current.shadow_banned(current_user).order(created_at: :desc).limit(30)
    - @replies.each do |reply|
      = render "replies/simple_full", reply: reply
