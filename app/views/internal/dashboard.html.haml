- @title = "My Dashboard"

- @theme = "default"
- content_for :header, @title
= render "internal/tabs"
- content_for :sidebar, render("internal/sidebar")

%p.lead Recent Forum Activity
- @replies = Reply.current.shadow_banned(current_user).order(created_at: :desc).limit(30)
- @replies.each do |reply|
  = render "replies/simple_full", reply: reply
