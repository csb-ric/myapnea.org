- @title = 'Settings'
- @menu_title = 'Your profile'
- @theme = 'night'

- content_for :body_class do
  myapnea-night-bg

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        = @title

= render 'blank/moon'

.drawer-and-shelf-container
  .drawer
    = render 'internal/settings_menu'
  .shelf
    .dashboard-container
      .pull-right
        .settings-title Profile picture
        .settings-body
          .text-muted Upload new picture

      .settings-title Profile

      .settings-body
        %strong Name
        %strong Bio

      .settings-title Change forum name
      .settings-body
        %strong Forum name
        .text-muted= current_user.forum_name

      .clearfix
