<% error_container = "#voting-form-error-#{@research_topic.id}" %>
<% if @vote_failed %>
  $("<%= error_container %>").removeClass("hidden");
<% else %>
  $("<%= error_container %>").addClass("hidden");
<% end %>

<% if params[:src] == 'dashboard' %>
  console.log("voted");
  $("#research-topic-highlight").html("<%=j render 'home/voting_highlight' %>");
<% else %>
  <% container = "#voting-container-#{@research_topic.id}" %>
  $("<%= container %>").html("<%=j render 'research_topics/displays/standard', research_topic: @research_topic, remote_bool: true %>");
<% end %>
