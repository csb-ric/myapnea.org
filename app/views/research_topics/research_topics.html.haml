- if params[:id] == 'popular'
  = render 'research_topics/research_topics', research_topics: ResearchTopic.popular(current_user), disabled: false, editable: false
- elsif params[:id] == 'voted_on' && current_user
  = render 'research_topics/research_topics', research_topics: current_user.research_topics_with_vote, disabled: false, editable: false
- elsif params[:id] == 'submitted' && current_user
  = render 'research_topics/research_topics', research_topics: current_user.submitted_research_topics, disabled: false, editable: false
- elsif params[:id] == 'newest'
  = render 'research_topics/research_topics', research_topics: ResearchTopic.newest(current_user), disabled: false, editable: false
