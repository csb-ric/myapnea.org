<% if @vote_failed %>
  $("#first-topics-error-form").removeClass("hidden");
<% else %>
  $("#first-topics-error-form").addClass("hidden");
<% end %>

$(document).scrollTop(0);
<% progress = (100 * current_user.votes.count / ENV['research_topic_experience_threshold'].to_i) %>

$("#first-topics-progress-bar").html("<%=j render 'research_topics/progress_bar', progress: progress %>");
<% if progress == 100 %>
  $("#first-topics-voting-form").remove();
  $("#first-topics-completed").html("<%=j render 'research_topics/ready' if current_user.vote_count == ResearchTopic::INTRO_LENGTH %>");
<% else %>
  $("#first-topics-voting-form").html("<%=j render 'research_topics/voting_form', research_topic: current_user.seeded_research_topic %>");
<% end %>
