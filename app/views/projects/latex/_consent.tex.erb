\begin{center}
  {\Large <%= latex_safe @project.name %> Consent} \\[0.5cm]
\end{center}

<% content = @project.consent.to_s %>
<% consent.gsub!(/\[(.*?)\]\(.*?\)/, "\\1") %>
<% content = latex_safe(content) %>
<% content.gsub!(/\\#\\#\\#\\#\s(.*?)\r\n/, "\\subsection*{\\1}\n\n") %>
<% content.gsub!(/\\#\\#\\#\s(.*?)\r\n/, "\\section*{\\1}\n\n") %>
<% content.gsub!(/\\#\\#\s(.*?)\r\n/, "\\section*{\\1}\n\n") %>
<% content.gsub!(/\\#\s(.*?)\r\n/, "\\section*{\\1}\n\n") %>
<% content.gsub!(/\*\*(.*?)\*\*/, "\\textbf{\\1}") %>
<% content.gsub!(/==(.*?)==/, "\\hl{\\1}") %>
<% content.gsub!(/XX(YES)XX/, "\\cmark") %>
<% content.gsub!(/XX(NO)XX/, "\\xmark") %>
<% content.gsub!(/\"([a-zA-Z\s\.-]*?)\"/, "``\\1''") %>
<% content.gsub!(/\*(.*?)\*/, "\\textit{\\1}") %>
<% content.gsub!(/(\\textless\{\}.*?\\textgreater\{\})/, "\\sloppy{\\mbox{\\1}}") %>
<% content.gsub!(/\-\s(.*?)\r\n/, "\\begin{itemize}\\item \\1\\end{itemize}") %>
<% content.gsub!(/\\end\{itemize\}\\begin\{itemize\}/, "") %>
<% content.gsub!(/\n/, "\n\\\\\\\n") %>
<%= content %> \\
