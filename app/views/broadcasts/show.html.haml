- @title = @broadcast.title

.content-main-header2
  %h1
    = link_to "Blog Posts", broadcasts_path
    &middot;
    = @broadcast.title
  %div
    - if @broadcast.published?

      - if @broadcast.publish_date <= Time.zone.today
        %span.label.label-info Published
        = link_to "View Blog Post", blog_post_path(year: @broadcast.publish_date.year, month: @broadcast.publish_date.strftime("%m"), slug: @broadcast.slug), class: "btn btn-sm btn-light"
      - else
        %span.label.label-info
          Set to Publish on
          = @broadcast.publish_date.strftime("%a, %B %-d, %Y")
    - else
      %span.label.label-warning DRAFT
    &nbsp;
    = link_to edit_broadcast_path(@broadcast), class: "btn btn-sm btn-light" do
      %span.glyphicon.glyphicon-edit
      Edit Blog Post

.row
  .col-lg-9
    .broadcast
      = simple_markdown(@broadcast.description, target_blank: false)

  .col-lg-3
    %p
      %strong Short Description
      %br
      = @broadcast.short_description

    %p
      %strong Keywords
      %br
      = @broadcast.keywords

    %p
      %strong Creator
      %br
      = @broadcast.user.full_name

    %p
      %strong Publish date
      %br
      = @broadcast.publish_date

    %p
      %strong Pinned
      %br
      = simple_check @broadcast.pinned

    %p
      %strong Archived
      %br
      = simple_check @broadcast.archived
