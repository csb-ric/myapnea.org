= form_for @child, html: { class: 'form-horizontal' } do |f|
  - if @child.errors.any?
    #error_explanation.bs-callout.bs-callout-danger
      %h4
        = pluralize(@child.errors.count, "error")
        prohibited this child from being saved

      %ul
        - @child.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :first_name, nil, class: 'col-md-2 control-label'
    .col-md-10
      = f.text_field :first_name, class: 'form-control', autocomplete: :off

  .form-group
    = f.label :age, nil, class: 'col-md-2 control-label'
    .col-md-10
      = f.text_field :age, class: 'form-control', autocomplete: :off
      .bs-callout.bs-callout-info{ style: 'margin-bottom: 0;' }
        %h4
          Child's Age
        Child's Age must be between 2 and 8 years old.

  .form-group
    .col-md-10.col-md-offset-2
      .checkbox
        %label
          = f.check_box :diagnosed
          Diagnosed with sleep apnea

  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, class: 'btn btn-primary'
      = link_to 'Cancel', (@child.new_record? ? children_path : @child), class: 'btn btn-default'
