.content-main-header
  .container
    %h1 Invite Your Personal Care Provider!

.container
  .content-container
    = form_for @invite do |f|
      = f.hidden_field :for_provider, value: true
      .input-group
        = f.label :email, class: 'control-label'
        = f.email_field :email, class: 'form-control'
      %br
      .input-group
        = f.submit 'Send Invitation', class: 'btn btn-primary'
