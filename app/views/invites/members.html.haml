.content-main-header
  .container
    %h1 Invite Others!

.container
  .content-container
    = form_for @invite do |f|
      .input-group
        = f.label :email, class: 'control-label'
        = f.email_field :email, class: 'form-control'
      %br
      .input-group
        = f.submit 'Send Invitation', class: 'btn btn-primary'
