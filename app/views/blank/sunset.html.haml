.menu-bar.menu-bar-fixed.menu-bar-sunset
  .container
    Sunset

.survey-box-with-footer.myapnea-sunset-bg
  = render 'blank/sunset'
  = render 'blank/progress_bar', start: 100 / 6 * 3, percent: 100 / 6 * 4
  .container
    .survey-box-slide-with-menu-and-footer.center-vertically.dashboard-container-full-page
      .dashboard-container
        .survey-question
          .survey-question-lead
            In this survey...
          .survey-question-text
            Are you of Hispanic, Latino, or Spanish origin or ancestry?
        .survey-choices
          - choices = ['No', 'Yes - Mexican, Mexican American, or Chicano', 'Yes - Puerto Rican', 'Yes - Cuban', 'Yes - Other or Mixed Hispanic, Latino, or Spanish origin', 'Unsure', 'Prefer not to answer']
          - choices.each do |choice|
            = link_to '#', class: 'survey-choice box-shadow', data: { object: 'suppress-click' } do
              .fa-stack.fa-stack-inline
                %i.fa.fa-circle.fa-stack-1x
                %i.fa.fa-check-circle.fa-stack-1x
              .survey-choice-text= choice
        = link_to night_path, class: 'survey-question-next', data: { turbolinks: false } do
          Next
      .survey-question-skip
        = link_to night_path, data: { confirm: 'Are you sure you want to skip this question?' } do
          Skip this question

- content_for :footer do
  .footer-container.footer-sunset
    .container
      .footer
        .hidden-sm.hidden-md.hidden-lg.text-center
          &copy;
          = Date.today.year
          = ENV['website_name']
        .row.hidden-xs
          .col-xs-6.nowrap
            &copy;
            = Date.today.year
            = ENV['website_name']
            |
            = link_to 'About', about_path
          .col-xs-6.nowrap.text-right.hidden-xs
            .pull-right
              = link_to image_tag('myapnea/welcome/img-small/bwh_footer.png', style: 'margin-top: -20px;'), 'http://www.brighamandwomens.org/'
