- content_for :header do
  .survey-box.myapnea-blue-bg
    .sun-container
      .landing-upper-right
        #sun
          %span.fa-stack
            %i.fa.fa-circle.fa-stack-1x
            %i.fa.fa-sun-o.fa-stack-1x
    .container
      .survey-box-slide.center-vertically.dashboard-container-full-page
        .dashboard-container
          .survey-question
            .survey-question-text
              What year were you born?
          .survey-choices{ style: 'margin-bottom: 20px;' }
            .text-center
              = select_tag 'year', options_for_select((1900..Time.zone.today.year - 18).to_a.reverse, selected: Time.zone.today.year), include_blank: 'Year', class: 'input-lg form-control', style: 'display: inline-block; width: auto; vertical-align: middle;'
          = render 'blank/next_question'
        = render 'blank/question_skip'
