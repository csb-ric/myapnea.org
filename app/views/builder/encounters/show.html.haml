.content-main-header
  %h1
    = link_to 'Surveys', builder_surveys_path
    &middot;
    = link_to @survey.name, builder_survey_path(@survey)
    &middot;
    = @encounter.slug

  - if @survey.editable_by?(current_user)
    = link_to 'Edit Encounter', edit_builder_survey_encounter_path(@survey, @encounter), class: 'btn btn-xs btn-default'
    = link_to 'Delete Encounter', builder_survey_encounter_path(@survey, @encounter), method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: "Are you sure you want to delete Encounter #{@encounter.slug}?" }

.content-container
  .content-body

    %dl.dl-horizontal
      %dt
        %strong Name
      %dd= @encounter.name

      %dt
        %strong Slug
      %dd
        = @encounter.slug

      %dt
        %strong Launched When
      %dd
        Launched
        - if @encounter.launch_days_after_sign_up == 0
          immediately
        - else
          = pluralize @encounter.launch_days_after_sign_up, 'day'
        after sign up.
