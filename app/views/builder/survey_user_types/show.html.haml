.content-main-header
  %h1
    = link_to 'Surveys', builder_surveys_path
    &middot;
    = link_to @survey.name, builder_survey_path(@survey)
    &middot;
    = @survey_user_type.user_type

  - if @survey.editable_by?(current_user)
    = link_to 'Edit Survey User Type', edit_builder_survey_survey_user_type_path(@survey, @survey_user_type), class: 'btn btn-xs btn-default'
    = link_to 'Delete Survey User Type', builder_survey_survey_user_type_path(@survey, @survey_user_type), method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: "Are you sure you want to delete Survey User Type #{@survey_user_type.user_type}?" }

.content-container
  .content-body

    %dl.dl-horizontal
      %dt
        %strong User Type
      %dd
        = @survey_user_type.user_type
