- blog_posts.each do |post|
  .panel.panel-default
    .panel-heading
      .row
        .col-md-1
          = image_tag post.user.photo_url, :class => "img-responsive img-thumbnail"
        .col-md-11
          =link_to blog_path do
            %h4.media-heading= post.title
          %small
            = post.author
          %br
          %small
            %strong= post.created_at.strftime("%m/%d/%Y")
          %br
          %small
            Tags:
            - post.tag_list.each do |tag|
              %span.label.label-primary= tag
    .panel-body
      %p= markdown post.introduction
      - if short
        %p= link_to "Read more...", blog_path
      - else
        = markdown post.body
    - if controller_name == "admin" || (blog_posts.one? && current_user.can_update?(post))
      .panel-footer.text-left
        .btn-group
          = link_to "Edit", edit_post_path(post), class: "btn btn-default btn-xs" if current_user.can_update?(post)
          = link_to "Delete", post_path(post), method: :delete, class: "btn btn-default btn-xs", data: { confirm: "Are you sure?" } if current_user.can_delete?(post)


- if current_user and current_user.can_create?(Post)
  = link_to "New Blog Post", new_post_path(post_type: "blog"), class: "btn btn-success btn-sm"