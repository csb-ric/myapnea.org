<%= simple_form_for(@topic) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :forum_id %>
    <%= f.input :user_id %>
    <%= f.input :name %>
    <%= f.input :locked %>
    <%= f.input :pinned %>
    <%= f.input :last_post_at %>
    <%= f.input :state %>
    <%= f.input :views_count %>
    <%= f.input :slug %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
