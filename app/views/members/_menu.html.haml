- @drawer = true
.d-none.d-sm-block= render "members/profile_image", member: member

.profile-menu-container
  %ul.blog-menu.profile-menu
    %li.blog-menu-header Member
    - if member.broadcasts.published.count > 0
      %li= link_to "Articles", blog_author_path(author: member.username)
    %li= link_to "Posts", posts_member_path(member.username), class: current_page?(posts_member_path(member.username)) ? "active" : nil
    %li= link_to "Badges", badges_member_path(member.username), class: current_page?(badges_member_path(member.username)) ? "active" : nil

.profile
  %div.overflow-hidden{ style: "margin-left: 20px;margin-right: 20px;margin-bottom: 0;padding-top: 11px;" }
    - if member.profile_bio.present?
      %p
        %strong Bio
        %br
        %small= member.profile_bio
    %p
      %strong Posts
      %br
      %small
        = number_with_delimiter member.replies.count
        - karma = member.replies.collect(&:rank).sum
        - if karma.negative?
          %span.small= "(#{number_with_delimiter karma})"
        - else
          %span.small= "(+#{number_with_delimiter karma})"
    - if false
      %p
        %strong Badges
        %br
        %small 3
