.form-group.string-container
  .input-group
    - if variable.prepend.present?
      .input-group-prepend= render "slice/surveys/decoration/addon", addon: variable.prepend
    = form.text_field "response", class: "form-control #{"is-invalid" if json.dig("errors", variable.name).present?}", value: response, autocomplete: "off"
    - if variable.append.present?
      .input-group-append= render "slice/surveys/decoration/addon", addon: variable.append
  = render "slice/surveys/decoration/errors", variable: variable, json: json
  = render "slice/surveys/decoration/field_note", variable: variable, json: json
