- @title = [@json.dig("design", "name"), @json["event"]["name"]].join(" - ")

= render "projects/theme", project: @project

.page-box.last-box.background-p50-grey.d-flex.d-md-block.flex-column.justify-content-center
  .container
    .survey-question
      .alert.alert-white.alert-box-shadow{ role: "alert" }
        %h1.alert-heading= @survey.name
        %p.text-muted
          = pluralize(@json.dig("design", "pages_count"), "question")

      .float-right
        = link_to slice_surveys_page_path(@project, params[:event], params[:design], 1), class: "btn btn-success btn-shadow" do
          Start survey
          %i.fa.fa-caret-right
      .clearfix
