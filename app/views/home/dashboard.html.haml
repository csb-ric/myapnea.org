- @title = 'Dashboard'

.content-main-header2
  %h1.f300= "Welcome, #{current_user.first_name}!"

.row
  .col-md-2.hidden-sm.hidden-xs
    .user-profile-container
      = link_to (current_user.forum_name.present? ? member_path(current_user.forum_name) : account_path) do
        = image_tag user_photo_url(current_user), class: 'img-responsive'
        = link_to account_path, data: { toggle: 'tooltip', container: 'body' }, title: 'Change Photo', class: 'user-profile-photo-link' do
          .glyphicon.glyphicon-camera
    %br
    = render 'home/research_highlight'
  .col-md-7.col-buffer
    %p.f500.logo-color
      Recent Forum Activity
    = render 'home/show_from_home'
    = render 'home/show_more_button'
  .col-md-3
    = render 'home/blog', limit: 5
