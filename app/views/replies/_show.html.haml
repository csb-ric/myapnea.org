%a.anchor-top{ name: reply.anchor }
%div{ id: "comment-#{reply.id}-container", class: [(level == 0 ? 'content-container' : nil), (level == 0 && reply.read?(current_user) ? 'reply-read' : '')], style: 'position:relative' }
  .reply-container{ class: (level.even? ? 'reply-even' : 'reply-odd' ) }
    - if include_chapter_title
      %div{ style: 'margin-bottom: 10px' }
        %small.f300
          Reply to
          = link_to reply.chapter.title, reply, data: { turbolinks: false }
    .reply-inner-container
      .reply-avatar-container{ style: "#{'display:none' unless reply.display_for_user?(current_user)}" }
        .reply-avatar
          - size = 50
          - if reply.deleted?
            = image_tag 'default-user.jpg', alt: '', class: 'user-thumbnail-forum-no-border', style: "max-height:#{(size*2)+5}px;max-width:#{size+5}px;", title: reply.user.forum_name, data: { toggle: 'tooltip', container: 'body', placement: 'top' }
          - else
            = image_tag user_photo_url(reply.user), alt: '', class: 'user-thumbnail-forum-no-border', style: "max-height:#{(size*2)+5}px;max-width:#{size+5}px;", title: reply.user.forum_name, data: { toggle: 'tooltip', container: 'body', placement: 'top' }
            .centered.text-muted{ style: 'font-size: 9px;margin-top:5px' }
              = pluralize(number_with_delimiter(reply.user.replies.count), 'post')
      .reply-header{ data: { parent_comment_id: reply.parent_comment_id, reply_id: reply.id } }
        = render 'replies/header', reply: reply, just_voted: false

      .reply-body{ style: "#{'display:none' unless reply.display_for_user?(current_user)}" }
        %div{ data: { object: 'reply-show', parent_comment_id: reply.parent_comment_id, reply_id: reply.id } }
          = render 'replies/formatted', reply: reply

        - unless reply.deleted?
          - new_reply = reply.chapter.replies.new(reply_id: reply.id)
          - parent_comment_id = new_reply.parent_comment_id
          - reply_id = (new_reply.new_record? ? 'new' : new_reply.id)
          %div{ id: "write_comment_#{parent_comment_id}_#{reply_id}" }
            - if reply.parent.is_a? Broadcast
              - async_write_a_reply_path = async_parent_reply_path(broadcast_id: reply.parent, parent_reply_id: parent_reply_id, reply_id: reply_id)
              - method = :post
              - remote = true
            - elsif reply.parent.is_a? Chapter
              -# async_write_a_reply_path = async_parent_reply_path(topic_id: reply.parent, parent_reply_id: parent_reply_id, reply_id: reply_id)
              - async_write_a_reply_path = async_chapter_reply_path(chapter_id: reply.parent, parent_comment_id: parent_comment_id, reply_id: reply_id)
              - method = :post
              - remote = true
              - if reply.parent.replies.first == reply
                - method = :get
                - remote = nil
                -# async_write_a_reply_path = page_topic_path(reply.parent, page: reply.parent.last_page, anchor: 'write-a-reply')
                - async_write_a_reply_path = page_chapter_path(reply.parent, page: reply.parent.last_page, anchor: 'write-a-reply')

            %small= link_to 'reply', async_write_a_reply_path, method: method, remote: remote, class: 'text-muted'
            %small= link_to 'link', reply, class: 'text-muted', data: { turbolinks: false }
            - if current_user && reply.editable_by?(current_user)
              %small= link_to 'edit', edit_reply_path(reply, chapter_id: reply.chapter), remote: true, class: 'text-muted'
              %small= link_to 'delete', reply_path(reply, chapter_id: reply.chapter), method: :delete, remote: true, data: { confirm: 'Are you sure you want to delete this comment?' }, class: 'text-muted'


          %div{ id: "comment_container_#{parent_comment_id}_#{reply_id}", style: 'display:none' }

        - reply_scope = reply.chapter.replies.where(reply_id: reply.id)

        - if params[:sort_by] == 'new'
          - reply_scope = reply_scope.order(id: :desc)
        - elsif params[:sort_by] == 'best'
          - reply_scope = reply_scope.order(:id)
        - else
          - reply_scope = reply_scope.order(:id)
        - reply_scope.each do |child_comment|
          = render 'replies/show', reply: child_comment, level: level + 1, include_chapter_title: false
