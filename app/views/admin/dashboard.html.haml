- @title = 'Admin Dashboard'

.content-main-header2
  %h1= @title

%h3 Member Management
.row.centered
  - if current_user.owner?
    .col-sm-3
      = link_to users_path, class: 'no-underline' do
        .blue-block-link
          Users
  .col-sm-3
    = link_to admin_providers_path, class: 'no-underline' do
      .blue-block-link
        Providers
  - if current_user.owner? && false
    .col-sm-3
      = link_to admin_reports_location_path, class: 'no-underline' do
        .blue-block-link
          Location

- if current_user.owner?
  %h3 Blog and Forum
  .row
    .col-sm-3
      = link_to admin_broadcast_comments_path, class: 'no-underline centered' do
        .blue-block-link
          Blog Comments
    .col-sm-3
      = link_to admin_replies_path, class: 'no-underline centered' do
        .blue-block-link
          Forum Replies

%h3 Survey Results
.row.centered
  .col-sm-3
    = link_to admin_cross_tabs_path, class: 'no-underline' do
      .blue-block-link
        Cross Tabs
  - if current_user.owner?
    .col-sm-3
      = link_to admin_exports_path, class: 'no-underline' do
        .blue-block-link
          Exports
  .col-sm-3
    = link_to admin_surveys_path, class: 'no-underline' do
      .blue-block-link
        Surveys
.row.centered
  .col-sm-3
    = link_to admin_progress_report_path, class: 'no-underline' do
      .blue-block-link
        Progress Report
  .col-sm-3
    = link_to admin_reports_timeline_path, class: 'no-underline' do
      .blue-block-link
        Timeline Report

- if current_user.owner?
  %h3 Features
  .row.centered
    .col-sm-3
      = link_to admin_clinical_trials_path, class: 'no-underline' do
        .blue-block-link
          Clinical Trials
    .col-sm-3
      = link_to admin_partners_path, class: 'no-underline' do
        .blue-block-link
          Partners
    .col-sm-3
      = link_to admin_team_members_path, class: 'no-underline' do
        .blue-block-link
          Team Members
  .row.centered
    .col-sm-3
      = link_to admin_social_media_path, class: 'no-underline' do
        .blue-block-link
          Social Media
