- @title = "Team Members"

- @body = "sky"
- @footer = "grass"

- content_for :container_class, "container-fluid"
- content_for :sidebar, render("admin/sidebar")
- content_for :header do
  .float-right
    = link_to plus_or("New Team Member"), new_admin_team_member_path, class: "btn btn-accent btn-shadow"
    = link_to "Edit Order", order_admin_team_members_path, class: "btn btn-light btn-shadow"
    = render "layouts/per_page", per_page: 40, object_count: @admin_team_members.total_count
  = @title

- if @admin_team_members.present?
  - @admin_team_members.each do |team_member|
    = render team_member
- else
  .jumbotron.jumbotron-action.jumbotron-shadow
    %p.text-center No team members found.
