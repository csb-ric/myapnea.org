= form_for @admin_team_member, html: { class: 'form-horizontal' } do |f|
  .form-group
    = f.label :name, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :designations, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :designations, class: 'form-control'
  .form-group
    = f.label :role, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :role, class: 'form-control'
  .form-group
    = f.label :group, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.select :group, Admin::TeamMember::GROUPS, { }, class: 'form-control'
  .form-group
    = f.label :position, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.number_field :position, class: 'form-control'
  .form-group
    = f.label :photo, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.file_field :photo
  .form-group
    = f.label :bio, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_area :bio, rows: 5, class: 'form-control'
  .form-group
    = f.label :interview, 'PEP Corner Interview', class: 'control-label col-md-2'
    .col-md-10
      = f.text_area :interview, rows: 30, class: 'form-control'
  .form-group
    .col-md-10.col-md-offset-2
      = f.submit nil, class: 'btn btn-primary'
