= form_for @admin_category, html: { class: 'form-horizontal' } do |f|
  - if @admin_category.errors.any?
    .panel.panel-danger
      .panel-heading
        %strong
          = pluralize @admin_category.errors.count, 'error'
          prohibited this category from being saved
      .panel-body
        %ul
          - @admin_category.errors.full_messages.each do |message|
            %li= message

  .form-group
    = f.label :name, class: 'col-md-2 control-label'
    .col-md-10
      = f.text_field :name, class: 'form-control', data: { object: (@admin_category.new_record? ? 'create-slug' : ''), target: '#admin_category_slug' }

  .form-group{ style: "#{'display:none' if @admin_category.new_record? && !@admin_category.errors.key?(:slug)}"}
    = f.label :slug, class: 'col-md-2 control-label'
    .col-md-10
      = f.text_field :slug, class: 'form-control'

  .form-group
    .col-md-10.col-md-offset-2
      = f.submit nil, class: 'btn btn-primary'
      = link_to 'Cancel', @admin_category.new_record? ? admin_categories_path : @admin_category, class: 'btn btn-default'
