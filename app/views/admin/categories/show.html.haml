- @title = "#{@admin_category.name} - Categories"
- @menu_title = @admin_category.name

- @theme = "day"
- content_for :header do
  .float-right
    = render "layouts/edit_delete_dropdown_header", edit_url: edit_admin_category_path(@admin_category), delete_url: @admin_category, delete_confirmation: "Delete #{@admin_category.name}?"
  = @menu_title
= render "admin/tabs"
- content_for :breadcrumbs do
  %ol
    %li= link_to "categories", admin_categories_path
    %li.breadcrumb-muted= @admin_category.slug
- content_for :sidebar, render("admin/sidebar")

.dashboard-container
  = render "forms/horizontal/show/text", object: @admin_category, key: :name
  = render "forms/horizontal/show/generic", title: "Slug", content: content_tag(:code, @admin_category.slug)
  = render "forms/horizontal/show/check_box", object: @admin_category, key: :show_on_blog_roll
