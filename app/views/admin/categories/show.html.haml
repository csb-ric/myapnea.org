- @title = @admin_category.name

- content_for :body_class do
  myapnea-sky-bg

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        .pull-right
          = render 'layouts/edit_delete_dropdown_header', edit_url: edit_admin_category_path(@admin_category), delete_url: @admin_category, delete_confirmation: "Delete #{@admin_category.name}?"
        = @title

.drawer-and-shelf-container
  .drawer
    = render 'admin/menu'
  .shelf
    .dashboard-container
      %table.table.table-striped.table-borderless.table-hover
        %col{ width: '30%' }
        %tr
          %th Name
          %td= @admin_category.name

        %tr
          %th Slug
          %td
            %code= @admin_category.slug
