.content-main-header2
  %h1
    = link_to 'Admin Dashboard', admin_path
    &middot;
    Surveys

.content-container
  %p
    %span.f500 Total MyApnea.Org members:
    %span.text-info= number_with_delimiter User.current.include_in_exports_and_reports.count
  %p
    %span.f500 Members with signed consent:
    %span.text-info= number_with_delimiter User.current.include_in_exports_and_reports.where("accepted_consent_at is not null").count
  %table.table.table-bordered.table-striped
    %thead
      %tr
        %th Name
        %th Number of Questions
        %th Number Started
        %th Number Completed
    %tbody
      - Survey.viewable.order(:name_en).each do |survey|
        %tr
          %td= link_to_if survey.editable_by?(current_user), survey.name, builder_survey_path(survey)
          %td= survey.questions.unarchived.count
          %td= number_with_delimiter survey.answer_sessions.joins(:user).merge(User.include_in_exports_and_reports).count
          %td= number_with_delimiter survey.answer_sessions.where(locked: true).joins(:user).merge(User.include_in_exports_and_reports).count
