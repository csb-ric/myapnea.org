- @title = "#{@admin_export.name} - Exports"
- @menu_title = @admin_export.name

- @theme = "blue-sky"
- content_for :header, @menu_title
= render "admin/tabs"
- content_for :breadcrumbs do
  %ol
    %li= link_to "exports", admin_exports_path
    %li.breadcrumb-muted= @admin_export.name.downcase
- content_for :sidebar, render("admin/sidebar")

.dashboard-container{ style: "position: relative;" }
  - if @admin_export.status == "started"
    #progress.custom-progress-bar{ style: "width: #{@admin_export.percent}%;", data: { object: "#{"ajax-timer" if @admin_export.total_steps != @admin_export.completed_steps}", path: progress_admin_export_path(@admin_export) } }

  #export-status= render "admin/exports/status", export: @admin_export
