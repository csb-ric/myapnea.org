.content-main-header
  .container
    %h1= research_article.title

.content-container
  .container
    .row
      .col-sm-2.col-xs-4
        = image_tag research_article_photo_url(research_article), alt: '', class: 'img-responsive author-img'
      .col-sm-10.col-xs-8
        %h2.f300
          = research_article.author
        %p.dark7
          = research_article.credentials
    %hr
    = simple_markdown research_article.content

- if research_article.references.present?
  .container
    %h4.f300 References
    = simple_markdown research_article.references
    %br
