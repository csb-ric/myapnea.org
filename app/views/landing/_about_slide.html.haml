- show_tagline = false
#about.anchor-menu
%div{ class: show_tagline ? "page-box p-0" : nil }
  - if show_tagline
    = render "landing/tagline", extra_class: "logo-container-original"
  .d-flex.flex-column.justify-content-center.theme-bg{ class: !show_tagline ? "page-box theme-#{@theme}-focus-bg" : "theme-#{@theme}-focus-bg" }
    .container
      - unless show_tagline
        - if true
          .text-center.mb-3= image_tag "logos/myapnea-logo-large-whitetext.png", style: "height: auto; width: 480px;", class: "img-ignore-selection img-fluid"

      .row
        .col-0.col-md-4.d-flex.align-items-center.landing-about-slide-feature-icon
          .text-center.text-md-right.w-100
            %i.fa.fa-comments-o.text-primary
        .col-12.col-md-8.col-lg-6
          = link_to topics_path, class: "landing-about-slide-feature link-unstyled" do
            .random-text
              Share your story
            .random-small-text
              Do you or a loved one suffer from sleep apnea? Share your
              experiences with the sleep apnea community on the forum.
              %span.text-accent
                Visit the forum
                %i.fa.fa-caret-right

      .row
        .col-0.col-md-4.d-flex.justify-content-center.align-items-center.landing-about-slide-feature-icon
          .text-center.text-md-right.w-100
            - if show_tagline
              %i.fa.fa-flask.text-accent
            - else
              %i.fa.fa-file-text.text-accent
        .col-12.col-md-8.col-lg-6
          = link_to slice_research_path, class: "landing-about-slide-feature link-unstyled" do
            .random-text
              Receive a personalized report
            .random-small-text
              Contribute to research by filling out surveys. We'll provide you a
              personalized report that you can bring to your doctor.
              %span.text-accent
                Start surveys
                %i.fa.fa-caret-right
      .row.mb-5
        .col-0.col-md-4.d-flex.justify-content-center.align-items-center.landing-about-slide-feature-icon
          .text-center.text-md-right.w-100
            %i.fa.fa-book.text-primary
        .col-12.col-md-8.col-lg-6
          = link_to blog_path, class: "landing-about-slide-feature link-unstyled" do
            .random-text
              Learn about sleep apnea
            .random-small-text
              Read articles published by fellow patients and research
              professionals.
              %span.text-accent
                View articles
                %i.fa.fa-caret-right

%div{ style: "position: relative;" }
  %div{ style: "position: relative;" }
    = link_to "#video", data: { object: "scroll-anchor" }, class: "text-white scroll-down-arrow-visible link-unstyled" do
      %i.fa.fa-chevron-down
