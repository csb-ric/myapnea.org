/ Short input text
.panel.survey-container.progress-w-enter.active
  .question-container
    %h3.f300 How many hours of sleep did you get last night?
  .input-container
    = text_field_tag 'hours', nil, maxlength: 2, class: 'survey-short-text survey-short-number survey-first-question'
  .button-container
    .btn.btn-primary.next-question
      Go to next question
    %p.text-muted Or press ENTER


/ Question Scale
.panel.survey-container.progress-w-enter
  .question-container
    %h3.f300 In the past 7 days, how was your sleep quality?
  .input-container
    = range_field_tag 'quality', nil, in: 1...10, step: '0.1'
  .button-container
    .btn.btn-primary.next-question
      Go to next question
    %p.text-muted Or press ENTER


/ Multiple Options
.panel.survey-container.progress-w-enter.progress-w-letter
  .question-container
    %h3.f300 When would you prefer to wake up?
  .input-container
    - input_name = 'wakeup'
    = radio_button_tag input_name, 'A'
    %label.survey-multiple-input-button{ for: "#{input_name+'_A'}" }
      %p 5 - 6:30am
      %span A
    = radio_button_tag input_name, 'B'
    %label.survey-multiple-input-button{ for: "#{input_name+'_B'}" }
      %p 6:30 - 8am
      %span B
    = radio_button_tag input_name, 'C'
    %label.survey-multiple-input-button{ for: "#{input_name+'_C'}" }
      %p 8 - 10am
      %span C
    = radio_button_tag input_name, 'D'
    %label.survey-multiple-input-button{ for: "#{input_name+'_D'}" }
      %p After 10am
      %span D


