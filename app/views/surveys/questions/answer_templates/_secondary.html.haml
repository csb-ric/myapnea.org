- if target_template.data_type == 'text_value'
  %div
    = text_field_tag "#{question.id}[#{target_template.id}]", answer.value[target_template.id], name: "response[#{target_template.id}]", class: "survey-short-text survey-text-small", disabled: answer.locked?, data: { secondary: true }
- elsif target_template.data_type == 'answer_option_id'
  - target_template.answer_options.distinct.each do |answer_option|
    %div{ class: 'label label-default label-sm' }
      = radio_button_tag "#{question.id}[#{target_template.id}]", answer_option.id, have_checked?(answer, target_template, answer_option.id), name: "response[#{target_template.id}]", id: "question_#{question.id}_#{target_template.id}_#{answer_option.new_value}", data: { hotkey: "#{answer_option.hotkey unless answer.locked?}", secondary: true }, disabled: answer.locked?
      %label{ for: "question_#{question.id}_#{target_template.id}_#{answer_option.new_value}", style: "#{'cursor: default' if answer.locked?}" }
        %p= answer_option.text
        %span.hotkey= answer_option.hotkey
  %br{ style: 'clear: both' }
