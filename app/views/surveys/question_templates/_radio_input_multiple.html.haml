-# Must be provided a question object: question
= form_tag(process_answer_path, {role: "form", class: 'survey-container multiple-question-parts'}) do
  = hidden_field_tag "question_id[]", question.id
  = hidden_field_tag "answer_session_id", answer_session.id
  .panel
    .question-container
      %h3.f300 Thinking about your sleep in the past 7 days, please answer the following questions.
    .input-container
      .row.multiple-question-container.current
        - input_name = 'sleepquality'
        .col-md-3.col-sm-12
          %h4.f300 My sleep quality was:
        .col-md-9.col-sm-12
          .row.reset-layout
            .option-of-multiple.option-of-5.survey-scale.survey-scale-danger
              = radio_button_tag input_name, '1'
              %label{ for: "#{input_name+'_1'}" }
                %p Very Poor
                %span.hotkey 1
            .option-of-multiple.option-of-5.survey-scale.survey-scale-warning
              = radio_button_tag input_name, '2'
              %label{ for: "#{input_name+'_2'}" }
                %p Poor
                %span.hotkey 2
            .option-of-multiple.option-of-5.survey-scale.survey-scale-moderate
              = radio_button_tag input_name, '3'
              %label{ for: "#{input_name+'_3'}" }
                %p Fair
                %span.hotkey 3
            .option-of-multiple.option-of-5.survey-scale.survey-scale-good
              = radio_button_tag input_name, '4'
              %label{ for: "#{input_name+'_4'}" }
                %p Good
                %span.hotkey 4
            .option-of-multiple.option-of-5.survey-scale.survey-scale-great
              = radio_button_tag input_name, '5'
              %label{ for: "#{input_name+'_5'}" }
                %p Very Good
                %span.hotkey 5
