= form_tag process_answer_surveys_path(question_id: question, answer_session_id: answer_session), role: "form", class: 'survey-container', data: { object: "question-container-#{question_number}" } do
  .panel
    .question-container
      %h3.f300= question.text
    .input-container
      - answer_template = question.answer_templates.first
      - height = parse_integer(answer.value[answer_template.id], 0)
      - feet = height / 12
      - inches = height - (feet * 12)
      .row
        .col-xs-6{ style: 'text-align:right'}
          = select_tag "#{question.id}[#{answer_template.id}][feet]", options_for_select(0..8, selected: feet), name: "response[#{answer_template.id}][feet]", class: 'height-select', disabled: answer.locked?
        .col-xs-6{ style: 'text-align:left'}
          = label_tag "#{question.id}[#{answer_template.id}][feet]", "feet", class: 'height-label'
      .row
        .col-xs-6{ style: 'text-align:right'}
          = select_tag "#{question.id}[#{answer_template.id}][inches]", options_for_select(0..11, selected: inches), name: "response[#{answer_template.id}][inches]", class: 'height-select', disabled: answer.locked?
        .col-xs-6{ style: 'text-align:left'}
          = label_tag "#{question.id}[#{answer_template.id}][inches]", "inches", class: 'height-label'
      .row
        .col-sm-8.col-sm-offset-2.col-xs-12
          = render partial: 'surveys/question_templates/prefer_not_to_answer_box', locals: {question: question, answer: answer}

    .button-container
      .btn.btn-primary.next-question
        Go to next question
      %p.text-muted Or press ENTER
