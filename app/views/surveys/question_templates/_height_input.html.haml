= form_tag(process_answer_path, {role: "form", class: 'survey-container', data: { object: "#{'question-container-'+question_number.to_s}" } }) do
  = hidden_field_tag "question_id[]", question.id
  = hidden_field_tag "answer_session_id", answer_session.id

  .panel
    .question-container
      %h3.f300= question.text
    .input-container
      - answer_template = question.answer_templates.first
      = select_tag "#{question.id}[#{answer_template.id}][feet]", options_for_select(0..10, selected: answer_template.postprocess_value(answer.value)["feet"].to_i)
      = label_tag "#{question.id}[#{answer_template.id}][feet]", "feet"
      = select_tag "#{question.id}[#{answer_template.id}][inches]", options_for_select(0..12, selected: answer_template.postprocess_value(answer.value)["inches"].to_i)
      = label_tag "#{question.id}[#{answer_template.id}][inches]", "inches"
      = render partial: 'surveys/question_templates/prefer_not_to_answer_box', locals: {question: question, answer: answer}

    .button-container
      .btn.btn-primary.next-question
        Go to next question
      %p.text-muted Or press ENTER
