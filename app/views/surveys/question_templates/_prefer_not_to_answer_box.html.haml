.input-group.center-block
  .check-box-container.preferred-not-to-answer
    = check_box_tag "#{question.id}[preferred_not_to_answer]", "1", answer.preferred_not_to_answer?, disabled: answer.locked?
    %label{ for: "#{question.id}[preferred_not_to_answer]", style: "#{'cursor: default' if answer.locked?}", class: "#{'hidden' if (answer.locked? and !answer.preferred_not_to_answer?)}" }
      %span.hotkey{ style: "#{'cursor: default' if answer.locked?}" } &#10003;
      %p Prefer not to answer
